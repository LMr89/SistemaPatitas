package com.ovni.hazard.app.repository;

import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;
import org.springframework.stereotype.Repository;

import com.ovni.hazard.app.model.bd.sp.CursoNota;

@Repository
public interface CursoNotaRepository extends JpaRepository<CursoNota, String>{
	
	/*Cuando los sp_ son para obtener datos ya no se pone las anotaciones TRANSACTIONAL , MODIFIED*/
	@Query(value = "{call sp_ListarCursoxAlumno(:idAlumno)}",nativeQuery = true)
	List<CursoNota> listarCursoNotaPorAlumno(@Param("idAlumno") String idAlumno);

}
